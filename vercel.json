{
  "version": 2,
  "builds": [
    {
      "src": "./app.js",
      "use": "@vercel/node"
    },
    {
      "src": "./frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app.js"
    }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "/frontend/build/index.html" }
  ]
}
